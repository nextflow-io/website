---
export interface Props {
  name: string;
  img: string;
  country: string;
  github: string;
  linkedin?: string;
  twitter?: string;
  mastodon?: string;
  bluesky?: string;
}

const { name, img, country, github, linkedin, twitter, mastodon, bluesky } = Astro.props;
---

<div class="feature">
  <div class="feature-body ambassadors flex flex-col items-center justify-center gap-5">
    <img src={`img/${img}`} class="ambassador" />
    <h4>{name}</h4>
  </div>
  <div class="feature-hover border-color">
    <p class="text-muted text-center">
      <slot />
      <img
        src={`https://flagicons.lipis.dev/flags/4x3/${country}.svg`}
        class="ambassador mx-auto my-1"
        width="15"
        height="15"
      />
      <a href={`https://github.com/${github}`} target="_blank"><i class="fa fa-github fa-lg fa-lg"></i></a>
      {
        linkedin && (
          <a href={`https://linkedin.com/in/${linkedin}`} target="_blank">
            <i class="fa fa-linkedin fa-lg fa-lg" />
          </a>
        )
      }
      {
        twitter && (
          <a href={`https://twitter.com/${twitter}`} target="_blank">
            <i class="fa fa-twitter fa-lg fa-lg" />
          </a>
        )
      }
      {
        mastodon && (
          <a href={mastodon} target="_blank">
            <i class="fa fa-rss fa-lg fa-lg" />
          </a>
        )
      }
      {
        bluesky && (
          <a href={bluesky} target="_blank">
            <i class="fa fa-rss fa-lg fa-lg" />
          </a>
        )
      }
      <br />
    </p>
  </div>
</div>
