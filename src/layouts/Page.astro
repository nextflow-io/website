---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<Layout {title} {description} {image}>
  <div class="wrapper">
    <div class="container-lg">
      <slot />
    </div>
  </div>
</Layout>
