---
import { getCollection } from "astro:content";
import Page from "@layouts/Page.astro";

const episodes = (await getCollection("podcast")).sort(
  (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);
---

<Page title="Podcast">
    <h4 class='text-muted'>Blogging about Nextflow, computational workflows, containers and cloud computing</h4>
	<hr>
    <div class="row">
        <div class="col-sm-8">
          <div class="timeline">
    {
        episodes.map((post) => {
          return (
            <section class="blg-summary">
			    <h3 ><a href={"/podcasts/" + post.slug}>{post.data.title}</a></h3>
				<div class="timeline-info hidden-xs">
				  <img src={post.data.icon} class="blg-author" alt={post.data.author}>
				</div>
			    <ul class="text-muted list-inline blg-header">
				  <li><i class="fa fa-user"></i> {post.data.icon}</li>
				  <li><i class="fa fa-calendar"></i> {post.data.date} </li>
			    </ul>
			    <hr>
			    <p class="blg-text">...
                </p>
            </section>
          );
        })
      }
</Page>
