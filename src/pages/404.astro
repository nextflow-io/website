---
import Page from "@layouts/Page.astro";
import Button from "@components/Button";
---

<Page title="Page not found">
  <div class="container container-lg my-auto h-full">
    <div class="h-full flex flex-col items-center my-50 justify-center">
      <div class="not-found">
        <h3 class="text-center">Page Not Found (404)</h3>
        <p class="text-center">
          Sorry, but we failed to find the page you are looking for.<br />
          Please visit our <a href="index.html">Home page</a>.
        </p>
        <Button url="/" variant="primary" className="mt-4 mx-auto">Go to Home</Button>
      </div>
    </div>
  </div>
</Page>
